# ==============================================
# PARTNERHUB - PRODUCTION ENVIRONMENT CONFIG
# ==============================================
# Copy this file to .env and fill in the real values
# DO NOT commit .env file to version control!

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# PostgreSQL database credentials
DB_USER=your_db_username_here
DB_PASS=your_secure_db_password_here
DB_NAME=partnerhub_prod

# Database connection details
DB_HOST=postgres
DB_PORT=5432

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_HOST=redis
REDIS_PORT=6379

# ==============================================
# KAFKA CONFIGURATION
# ==============================================
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_UI_PORT=8085
KAFKA_TOPIC_USER_CREATION=user-creation-topic

# ==============================================
# APPLICATION SECURITY
# ==============================================
# Spring Security basic auth credentials
ADMIN_USER=admin
ADMIN_PASS=your_secure_admin_password_here

# ==============================================
# CORS CONFIGURATION
# ==============================================
# Comma-separated list of allowed origins
# Example: https://yourdomain.com,https://app.yourdomain.com
CORS_ORIGINS=https://partnerhub.com,https://app.partnerhub.com

# ==============================================
# MONITORING
# ==============================================
# Grafana admin password
GRAFANA_ADMIN_PASSWORD=your_grafana_password_here

# ==============================================
# APPLICATION SETTINGS
# ==============================================
# Spring profile (don't change this)
SPRING_PROFILES_ACTIVE=prod

# JPA/Hibernate settings for production
SPRING_JPA_HIBERNATE_DDL_AUTO=validate

# Log directory
LOG_DIR=/app/logs